<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog
        title="Create Notification"
        class="sapUiPopupWithPadding" >
        <content>
            <l:Grid
                defaultSpan="L12 M12 S12"
                width="auto">
                <l:content>
                    <f:SimpleForm id="SimpleFormChange354"
                        minWidth="1024"
                        maxContainerCols="2"
                        editable="true"
                        layout="ResponsiveGridLayout"
                        labelSpanL="3"
                        labelSpanM="3"
                        emptySpanL="4"
                        emptySpanM="4"
                        columnsL="1"
                        columnsM="1"
                        class="editableForm">
                        <f:content>
                            <Label text="Notification Type" />
                            <Select width="100%">
                                <items>
                                     <core:Item text="" />
                                    <core:Item text="Type1" />
                                    <core:Item text="Type2" />
                                    <core:Item text="Type3" />
                                </items>
                            </Select>
                            <Label text="Priority" />
                            <Select width="100%">
                                <items>
                                    <core:Item text="" />
                                    <core:Item text="Priority1" />
                                    <core:Item text="Priority2" />
                                    <core:Item text="Priority3" />
                                </items>
                            </Select>
                            <Label text="Description" />
                          
                            <Input>
                               
                            </Input>
                            <Label text="Failure Mode" />
                            <Select width="100%">
                                <items>
                                    <core:Item text="" />
                                    <core:Item text="Dec1" />
                                    <core:Item text="Dec2" />
                                    <core:Item text="Dec3" />
                                </items>
                            </Select>
                            <Label text="Object Part" />
                            <Select width="100%">
                                <items>
                                    <core:Item text="" />
                                    <core:Item text="Obj11" />
                                    <core:Item text="Obj2" />
                                    <core:Item text="Obj3" />
                                </items>
                            </Select>
                            <Label text="Damage" />
                            <Select width="100%">
                                <items>
                                    <core:Item text="" />
                                    <core:Item text="Obj11" />
                                    <core:Item text="Obj2" />
                                    <core:Item text="Obj3" />
                                </items>
                            </Select>
                            <Label text="Cause" />
                            <Select width="100%">
                                <items>
                                    <core:Item text="" />
                                    <core:Item text="Obj11" />
                                    <core:Item text="Obj2" />
                                    <core:Item text="Obj3" />
                                </items>
                            </Select>
                            <Label text="Detail Description" />
                            <TextArea />
                        </f:content>
                    </f:SimpleForm>
                </l:content>
            </l:Grid>
        </content>
        <beginButton>
            <Button text="Cancel"  type="Reject" app:dialogType="Std" press="onDialogCloseButton" />
        </beginButton>
        <endButton>
            <Button text="Save" app:dialogType="Std" press="onDialogCloseButton" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>